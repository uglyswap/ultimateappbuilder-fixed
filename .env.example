# Application Configuration
NODE_ENV=production
PORT=3000
APP_URL=http://localhost:3000

# Database (automatically configured in docker-compose)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ultimate_app_builder?schema=public

# Redis (automatically configured in docker-compose)
# Supports password: redis://[:password]@host:port
REDIS_URL=redis://redis:6379

# AI Provider Configuration
# Configure these via the web interface after deployment or set them here
# Choose one: anthropic, openai, or openrouter
AI_PROVIDER=openrouter
AI_MODEL=anthropic/claude-3.5-sonnet
AI_MAX_TOKENS=16000
AI_TEMPERATURE=0.7

# API Keys (OPTIONAL - can be configured via web interface after startup)
# ANTHROPIC_API_KEY=your-anthropic-key-here
# OPENAI_API_KEY=your-openai-key-here
# OPENROUTER_API_KEY=your-openrouter-key-here

# Authentication
JWT_SECRET=change-this-in-production-use-random-string
JWT_EXPIRES_IN=7d

# Autonomous Mode (enabled by default)
AUTONOMOUS_MODE=true
AUTO_FIX_ERRORS=true
AUTO_OPTIMIZE=true
AUTO_TEST=true
AUTO_DEPLOY=false

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false
ENABLE_DEBUG_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./storage

# Optional Integrations (configure as needed)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
# GITHUB_TOKEN=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# Email (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
