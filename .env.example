# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ultimate_app_builder?schema=public"
REDIS_URL="redis://localhost:6379"

# API Keys - Ultimate AI Support (200+ Models)
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
OPENROUTER_API_KEY="your-openrouter-api-key"  # Access to 200+ models from multiple providers

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="7d"

# Integrations
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
GITHUB_TOKEN="ghp_..."
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Application
NODE_ENV="development"
PORT="3000"
APP_URL="http://localhost:3000"

# Storage
STORAGE_TYPE="local" # local | s3
STORAGE_PATH="./storage"

# AI Configuration - Choose from 200+ Models!
AI_PROVIDER="anthropic" # anthropic | openai | openrouter
AI_MODEL="claude-3-5-sonnet-20241022"  # Latest Claude Sonnet
AI_MAX_TOKENS="8000"
AI_TEMPERATURE="0.7"

# Autonomous Mode - YOLO Mode Activated! ðŸš€
AUTONOMOUS_MODE="true"  # No confirmations, full automation
AUTO_FIX_ERRORS="true"  # Automatically fix errors
AUTO_OPTIMIZE="true"    # Auto-optimize generated code
AUTO_TEST="true"        # Auto-generate and run tests
AUTO_DEPLOY="false"     # Auto-deploy (keep false for safety)

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_TELEMETRY="false"
ENABLE_DEBUG_MODE="true"
